<h1 class="header-logo">
  <a href="/">Ost.io</a>
</h1>

<div class="header-links">
  <h4 class="header-link"><a href="/feed/">Feed</a></h4>
</div>

<div class="header-auth">
  {{#if_logged_in}}
    {{#with_user}}
      <a href="/{{username}}"><img class="avatar header-avatar"
      src="{{#gravatar}}{{gravatarId}}{{/gravatar}}"></a>
      <a href="/{{username}}">{{username}}</a>
      <a class="icon-cog" href="/settings"></a>
      <a class="icon-logout" href="/logout/"></a>
    {{/with_user}}
  {{else}}
    {{#with_config}}
      <button class="header-login-button button go-to" data-href="{{api.root}}/auth/github">Login with GitHub</button>
    {{/with_config}}
  {{/if_logged_in}}
</div>
